{
    "name": "severity/config-loader",
    "description": "Configuration loader project",
    "authors": [
        {
            "name": "Zolt√°n Fekete",
            "email": "z-schwarz@gmx.de"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-yaml": "*"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Severity\\ConfigLoader\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Severity\\ConfigLoader\\Tests\\Unit\\": "tests/unit",
            "Severity\\ConfigLoader\\Tests\\Utility\\": "tests/utility"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "ext-yaml": "2.2.1"
        }
    }
}
